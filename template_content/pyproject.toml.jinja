[project]
name = "clear-skies-{{ module_name }}"
description = "{{ module_display_name }} module for Clearskies"
version = "v2.0.0"
license = "MIT"
readme = "./README.md"
authors = [{name = "{{ author_name }}", email = "{{ author_email }}"}]
requires-python = ">=3.11,<4.0"
dependencies = ["clear-skies>=2.0.0,<3.0.0"]
classifiers = [
    "Development Status :: 5 - Production/Stable",
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: MIT License",
    "Intended Audience :: Developers"
]

[project.urls]
Repository = "https://github.com/clearskies-py/{{ module_name }}"
Issues = "https://github.com/clearskies-py/{{ module_name }}/issues"
Changelog = "https://github.com/clearskies-py/{{ module_name }}/blob/main/CHANGELOG.md"

[project.optional-dependencies]
dev = [
    "types-requests>=2.32.4"
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/{{ package_name }}"]

[tool.hatch.build]
exclude = [
    "src/{{ package_name }}/*_test.py",
    "src/{{ package_name }}/**/*_test.py",
    "src/{{ package_name }}/integration_tests/*",
    "docs/**",
    "tests/**"
]

[tool.black]
line-length = 120
skip-magic-trailing-comma = false
preview = true

[tool.mypy]
python_version = "3.11"

exclude = [
    ".*_test\\.py$",
    "docs/.*"
]

[tool.pytest.ini_options]
minversion = "6.0"
addopts = "-ra -q"
testpaths = [
    "tests",
    "integration",
]
pythonpath = [
  "app"
]

# This is the dedicated section for uv"s configuration
[dependency-groups]
dev = [
    "black>=25.1.0",
    "pre-commit>=4.3.0",
    "pytest>=8.4.1",
    "pytest-cov>=6.2.1",
    "ruff>=0.12.10",
]
